<%- include('partials/_header') %>

<div class="container">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <form action="/edit/<%= task._id %>" method="POST">
                        <div class="form-group">
                            <input type="text" name="title" placeholder="Title" class="form-control" value="<%= task.title %>">
                        </div>
                        <div class="form-group">
                            <textarea name="description" cols="80" placeholder="Description" class="form-control"><%= task.description %></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">
                            Edit
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/_footer') %>